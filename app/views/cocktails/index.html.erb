
<div class="container">
  <h2>Cocktails List</h2>
  <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-sm ml-5 mt-10">
        <div class="card" style="width: 18rem;">
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, alt: 'cocktail', width: 300, height:200, crop: :fit %>
          <% else %>
            <%= image_tag "https://images.unsplash.com/photo-1536599424071-0b215a388ba7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80", alt: "coktail", width: 300, height:200, crop: :fit %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= cocktail.name %></h5>
            <p class="card-text">Original and delitghful coktail !!</p>
            <%= link_to "Details", cocktail_path(cocktail.id), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="button">
<%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-secondary" %>
</div>


