<div class="main-container">

  <div class="container">
    <h2>Our cocktails</h2>
    <div class="row">
        <% @cocktails.each do |cocktail| %>
        <div class="col-sm ml-5 mt-10">
          <div class="card" style="width: 16rem;">
            <% if cocktail.photo.attached? %>
              <%= cl_image_tag cocktail.photo.key, alt: 'cocktail', width: 300, height:200, crop: :fit %>
            <% else %>
              <%= cl_image_tag "eepfjqdvo9epwzddhtog", alt: "coktail", width: 286, height:200, crop: :fit %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= cocktail.name.capitalize %></h5>
              <p class="card-text">Original and delitghful coktail !!</p>
              <%= link_to "Details", cocktail_path(cocktail.id), class: "btn btn-secondary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="buttons">
      <div class="bouton">
      <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-dark" %>
      </div>
      <div class="back_index">
        <%= link_to "Back to list", cocktails_path, class: "btn btn-dark" if params[:query].present? %>
      </div>
    </div>
  </div>

  <div class="display-map">
    <hr>
    <h2>Nous rejoindre</h2>
    <div id="map" style="height: 300px; width: 100%"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>



