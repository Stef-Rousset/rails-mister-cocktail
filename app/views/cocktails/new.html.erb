<div class="container">
<h2>Create an new cocktail</h2>


<%= simple_form_for (@cocktail) do |f| %>
  <%= f.input :name %>
  <%= f.input :photo, as: :file %>

  <%= f.submit "Submit cocktail", class: "btn btn-secondary" %>
<% end %>
<%= link_to "Back to list", cocktails_path, class: "btn btn-secondary" %>
</div>


