
<div class="container">
  <h2><%= @cocktail.name.capitalize %></h2>
  <div class="details">
    <div class="card-description">
      <h4>Description</h4>
        <p><%= @cocktail.description %></p>
    </div>
    <div class="photo">
      <% if @cocktail.photo.attached? %>
        <%= cl_image_tag @cocktail.photo.key, height: 300, width: 300, crop: :fit, class: 'picture' %>
      <% else %>
          <%= cl_image_tag "eepfjqdvo9epwzddhtog", alt: "coktail", width: 300, height:300, crop: :fit %>
      <% end %>
    </div>
    <div class="card-ingredients">
      <h4>Ingrédients</h4>
      <ul class="list">
        <% @cocktail.doses.each do | dose| %>
          <div class="ingredient">
            <li><%= dose.description %> : <%= dose.ingredient.name %></li>
              <%= link_to  '<i class="fas fa-trash-alt"></i>'.html_safe,
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="back">
    <%= link_to "Retour à la liste", root_path, class: "btn btn-secondary" %>
    <%= link_to "Ajouter un ingrédient", new_cocktail_dose_path(@cocktail), class: "btn btn-secondary "%>
  </div>
</div>
