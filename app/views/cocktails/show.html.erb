<div class="container">
<h2>Cocktail selected</h2>

<h3><%= @cocktail.name.capitalize %></h3>
<ul><% @cocktail.doses.each do | dose| %>
  <li><%= dose.description %> : <%= dose.ingredient.name %></li>
  <%= link_to "Delete",
        dose_path(dose),
        method: :delete,
        data: {confim: "Are you sure ?"} %>
  <% end %>
</ul>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-secondary" %>

<%= link_to "Back to list", cocktails_path, class: "btn btn-secondary" %>
</div>
